\ProvidesPackage{VassorTitle}
\RequirePackage{graphicx}

\newif\ifinstitution
\newif\ifproject
\newif\ifsupervisor
\newif\ifcollaborator
\newif\ifimage

\newcommand*{\project}[1]{
	\projecttrue
	\gdef\@project{#1}%
}
\newcommand*{\@project}{
	\projectfalse
}
\newcommand*{\supervisor}[1]{
	\supervisortrue
	\gdef\@supervisor{#1}
}
\newcommand*{\@supervisor}{
	\supervisorfalse
}
\newcommand*{\collaborator}[1]{
	\collaboratortrue
	\gdef\@collaborator{#1}
}
\newcommand*{\@collaborator}{
	\collaboratorfalse
}
\newcommand*{\institution}[1]{
	\institutiontrue
	\gdef\@institution{#1}
}
\newcommand*{\@institution}{
	\institutionfalse
}
\newcommand*{\image}[1]{
	\imagetrue
	\gdef\@image{#1}
}
\newcommand*{\@image}{
	\imagefalse
}
\renewcommand*{\maketitle}{%
	\begin{titlepage}
		\ifimage
		{\raggedleft%
			\includegraphics[width=3cm]{\@image}\par
		}\vspace{1cm}
		\fi
		\centering
		\ifinstitution
		{\scshape\LARGE \@institution\unskip\strut\par}
		\vspace{1cm}
		\fi
		\ifproject
		{\scshape\Large\@project\unskip\strut\par}
		\vspace{1.5cm}
		\fi
		{\huge\bfseries\@title\unskip\strut\par}
		\vspace{2cm}
		{\Large\@author\unskip\strut\par}
		\vfill
		
		\ifcollaborator
		in collaboration with\par
		\@collaborator\unskip\strut\par
		\fi
		
		\ifcollaborator
		\ifsupervisor
		\vspace{.5cm}
		and
		\vspace{.5cm}
		\fi
		\fi

		\ifsupervisor
		supervised by\par
		\@supervisor\unskip\strut\par
		\fi

		\vfill

		{\large \@date\par}
	\end{titlepage}
}
\endinput
